import 'package:jivosdk_plugin/bridge.dart';

class User {
    String email;
    String jwt;
    String? fullName;
    String? phoneNumber;
    User(this.email, this.jwt, this.fullName, this.phoneNumber);
}

class UserManager {
    User? user;
    
    void updateUser(User? user) {
        this.user = user;
        _configureJivoSession();
    }
  
    void _configureJivoSession() {
        if (user != null) {
            Jivo.session.startUp(
                channelID: 'YOUR_CHANNEL_ID',
                userToken: user?.jwt ?? '');
          
            Jivo.session.setContactInfo(
                name: user?.fullName,
                email: user?.email,
                phone: user?.phoneNumber,
                brief: "Awesome person");
        }
        else {
            Jivo.session.shutDown();
        }
    }
}
